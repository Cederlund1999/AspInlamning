@page
@model AspInlamning.Pages.RegisterEvent.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Registered Events</h1>

<p>
    Information about your registered events
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            
            <th>
                Address
            </th>
            <th>
                Date
            </th>
            <th>
                Place
            </th>
            

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Register) {
        <tr>
            <td>
                @item.Event.Title
            </td>

            <td>
                @item.Event.Description
            </td>
            
            <td>
                @item.Event.Address
            </td>
            <td>
                @item.Event.Date
            </td>
            <td>
                @item.Event.Place
            </td>
            
            <td>
                
                <a asp-page="./Delete" asp-route-id="@item.RegisterID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
